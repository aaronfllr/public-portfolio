generator client {
  provider = "prisma-client-js"
  binaryTargets = ["native", "debian-openssl-1.1.x"]
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Blog {
  id        String      @id @default(uuid())
  title     String
  content   String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  published Boolean  @default(false)
  authorId  Int?
  filePath  String
  imagePath String
}

model Inquiries {
  id        String      @id @default(uuid())
  email     String
  createdAt DateTime @default(now())
}

model Projects {
  id       String      @id @default(uuid())
  title     String
  content   String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  published Boolean  @default(false)
  authorId  Int?
  filePath  String
  imagePath String
}

model Resume {
  id        String      @id @default(uuid()) 
  title     String      
  published Boolean  @default(false)
  createdAt DateTime @default(now())
  filePath  String  @unique
}